@model AboutDto
@{
    ViewBag.Title = "About Us";
    var banner = ViewBag.Banner as PageBannerDto;
}

<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>@(banner?.Title ?? "About Us")</h2>
            </div>
            <div class="col-12">
                <a href="">Home</a>
                <a href="">@(banner?.Title ?? "About Us")</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
@if (Model != null)
{
    <!-- About Start -->
    <div class="about wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-6">
                    <div class="about-img">
                        <img src="~/@Model.ImageUrl" alt="@Model.MainHeading">
                    </div>
                </div>
                <div class="col-lg-7 col-md-6">
                    <div class="section-header text-left">
                        <p>@Model.SubTitle</p>
                        <h2>@Model.MainHeading</h2>
                    </div>
                    <div class="about-text">
                        <p>@Model.Description</p>
                        @if (!string.IsNullOrEmpty(Model.SecondDescription))
                        {
                            <p>@Model.SecondDescription</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.ButtonUrl))
                        {
                            <a class="btn" href="@Model.ButtonUrl">@Model.ButtonText</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
    <!-- Fact Start -->
    <div class="fact">
        <div class="container-fluid">
            <div class="row counters">
                <div class="col-md-6 fact-left wow slideInLeft">
                    <div class="row">
                        <div class="col-6">
                            <div class="fact-icon">
                                <i class="flaticon-worker"></i>
                            </div>
                            <div class="fact-text">
                                <h2 data-toggle="counter-up">@Model.ExpertWorkers</h2>
                                <p>Expert Workers</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="fact-icon">
                                <i class="flaticon-building"></i>
                            </div>
                            <div class="fact-text">
                                <h2 data-toggle="counter-up">@Model.HappyClients</h2>
                                <p>Happy Clients</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 fact-right wow slideInRight">
                    <div class="row">
                        <div class="col-6">
                            <div class="fact-icon">
                                <i class="flaticon-address"></i>
                            </div>
                            <div class="fact-text">
                                <h2 data-toggle="counter-up">@Model.CompletedProjects</h2>
                                <p>Completed Projects</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="fact-icon">
                                <i class="flaticon-crane"></i>
                            </div>
                            <div class="fact-text">
                                <h2 data-toggle="counter-up">@Model.RunningProjects</h2>
                                <p>Running Projects</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fact End -->
}