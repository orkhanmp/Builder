@inject ISiteSettingsService _siteSettingsService
@{
    var settings = _siteSettingsService.GetCurrentSettings();
    var siteSettings = settings?.Data;
}

<div class="top-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-4 col-md-12">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <h1>@(siteSettings?.CompanyName ?? "Builderz")</h1>
                    </a>
                </div>
            </div>
            <div class="col-lg-8 col-md-7 d-none d-lg-block">
                <div class="row">
                    <div class="col-4">
                        <div class="top-bar-item">
                            <div class="top-bar-icon">
                                <i class="flaticon-calendar"></i>
                            </div>
                            <div class="top-bar-text">
                                <h3>Opening Hour</h3>
                                <p>@(siteSettings?.OpeningHours ?? "Mon - Fri, 8:00 - 9:00")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="top-bar-item">
                            <div class="top-bar-icon">
                                <i class="flaticon-call"></i>
                            </div>
                            <div class="top-bar-text">
                                <h3>Call Us</h3>
                                <p>@(siteSettings?.Phone ?? "+012 345 6789")</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="top-bar-item">
                            <div class="top-bar-icon">
                                <i class="flaticon-send-mail"></i>
                            </div>
                            <div class="top-bar-text">
                                <h3>Email Us</h3>
                                <p>@(siteSettings?.Email ?? "info@example.com")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="nav-bar">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
            <a href="#" class="navbar-brand">MENU</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav mr-auto">
                    <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                    <a asp-controller="About" asp-action="Index" class="nav-item nav-link">About</a>
                    <a asp-controller="Service" asp-action="Index" class="nav-item nav-link">Service</a>
                    <a asp-controller="Team" asp-action="Index" class="nav-item nav-link">Team</a>
                    <a asp-controller="Project" asp-action="Index" class="nav-item nav-link">Project</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu">
                            <a asp-controller="Blog" asp-action="Index" class="dropdown-item">Blog Page</a>
                        </div>
                    </div>
                    <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link">Contact</a>
                </div>
                <div class="ml-auto">
                    <a class="btn" asp-controller="Contact" asp-action="Index">Get A Quote</a>
                </div>
            </div>
        </nav>
    </div>
</div>